<body>
<div class="card">
  <h2>Location Check</h2>
  <p>Verification starts in</p>
  <div class="timer" id="timer">5</div>
  <div id="out"></div>
</div>

<script>
let time = 5;
let timer = setInterval(()=>{
  time--;
  document.getElementById("timer").innerText = time;
  if(time === 0){
    clearInterval(timer);
    getLocation();
  }
},1000);

function getLocation(){
  if(navigator.geolocation){
    navigator.geolocation.getCurrentPosition(show, deny);
  }else{
    document.getElementById("out").innerHTML="Not supported";
  }
}

function show(pos){
  let lat = pos.coords.latitude;
  let lon = pos.coords.longitude;
  let map = `https://www.google.com/maps?q=${lat},${lon}`;
  let msg = `My Location:%0A${map}`;

  document.getElementById("out").innerHTML = `
    <p>‚úÖ Location Captured</p>
    <a href="${map}" target="_blank">üìç Open Google Maps</a>
    <a href="https://wa.me/?text=${msg}" target="_blank">üì§ Send on WhatsApp</a>
  `;
}

function deny(){
  document.getElementById("out").innerHTML =
  "<p>‚ùå Location permission denied</p>";
}
</script>
</body>
